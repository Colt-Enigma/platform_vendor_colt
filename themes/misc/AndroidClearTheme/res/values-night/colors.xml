<resources>

    <!-- The color of the material notification background -->
    <color name="notification_material_background_color">#80000000</color>

    <!-- The color of the legacy notifications with customs backgrounds (gingerbread and lollipop.)
    It's fine to override this color since at that point the shade was dark. -->
    <color name="notification_legacy_background_color">#80000000</color>

    <color name="volume_background_tint">#cc000000</color>

    <!-- OOS dismiss style color -->
    <color name="recents_dismiss_all_background_color">#ff000000</color>

    <!-- The color of the background in the top part of QSCustomizer -->
    <color name="qs_customize_background">#80000000</color>

    <!-- The color of the background in the bottom part of QSCustomizer -->
    <color name="qs_customize_decoration">#80000000</color>

    <!-- The color of the material notification background when dimmed -->
    <color name="notification_material_background_dimmed_color">#80000000</color>

    <!-- The color of the background in the grid of the Global Actions menu -->
    <color name="global_actions_grid_background">#cc000000</color>

    <color name="notification_shade_background_color">@*android:color/transparent</color>
    <color name="notification_guts_bg_color">@*android:color/transparent</color>
    <color name="notification_material_background_dark_color">#80000000</color>

    <color name="theme_generic_semi_transparent_color">#80000000</color>
    <!-- Resolver -->
    <color name="resolver_list_bg">@*android:color/primary_dark_device_default_settings</color>
    <color name="chooser_service_row_background_color">@*android:color/primary_dark_device_default_settings</color>

    <!-- System Backgrounds -->	
    <color name="material_grey_900">@*android:color/primary_dark_device_default_settings</color>
    <color name="material_grey_850">@*android:color/primary_dark_device_default_settings</color>
    <color name="material_grey_800">@*android:color/primary_dark_device_default_settings</color>
    <color name="material_grey_600">@*android:color/primary_dark_device_default_settings</color>
    <color name="material_blue_grey_700">@*android:color/primary_dark_device_default_settings</color>
    <color name="material_blue_grey_800">@*android:color/primary_dark_device_default_settings</color>
    <color name="material_blue_grey_900">@*android:color/primary_dark_device_default_settings</color>
    <color name="material_blue_grey_950">@*android:color/primary_dark_device_default_settings</color>

    <!-- Toast text and bg colors -->
    <color name="toast_bg_color">@*android:color/primary_dark_device_default_settings</color>

</resources>
