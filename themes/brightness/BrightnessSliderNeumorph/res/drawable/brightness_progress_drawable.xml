<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item 
	android:gravity="fill_horizontal|center" 
	android:id="@android:id/background">
		<shape 
		android:shape="rectangle">
			<size 
			android:height="40.0dip" />
			<stroke 
			android:width="0.0dip" 
			android:color="?android:colorAccent" />
		<gradient android:angle="22"
            android:startColor="#ffd4d4d4"
       android:endColor="#FFf0f0f0"
       android:type="linear" />
			<corners 
			android:radius="20.0dip" />
		</shape>
	</item>
	<item 
	android:gravity="fill_horizontal|center" 
	android:id="@android:id/background">
<inset android:insetLeft="5.0dip" android:insetRight="5.0dip">
		<shape 
		
		android:shape="rectangle">
			<size 
			android:height="33.0dip" />
			<stroke 
			android:width="0.0dip" 
			android:color="?android:colorAccent" />
		<gradient android:angle="90"
            android:startColor="#ffd4d4d4"
       android:endColor="#FFf0f0f0"
       android:type="linear" />
			<corners 
			android:radius="20.0dip" />
		</shape>
</inset>
	</item>

	<item 
	android:gravity="fill_horizontal|center" 
	android:id="@android:id/progress">
		<scale 
		android:scaleWidth="94%">
<inset android:insetLeft="2.0dip" android:insetRight="2.0dip">
			<shape 
			android:shape="rectangle">
				<size 
				android:height="31.0dip" />
				<stroke 
                android:width="0dip" 
                android:color="#ff000000" />
         <gradient 
       android:startColor="@android:color/system_accent2_300"
       android:endColor="@android:color/system_accent1_300"
       android:angle="0.0" />
                <corners 
                android:radius="19.0dip" />
            </shape>
</inset>
        </scale>
    </item>
</layer-list>
