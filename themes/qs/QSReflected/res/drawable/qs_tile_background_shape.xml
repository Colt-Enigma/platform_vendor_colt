<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:tintMode="src_atop">
                    <solid android:color="#ffffffff" />
                    <corners android:radius="@*android:dimen/harmful_app_name_padding_top" />
                </shape>
            </item>
            <item
                android:end="12dp"
                android:bottom="6dp"
                android:gravity="end|bottom"
                android:drawable="@drawable/ic_qstile_reflect_disabled" />
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:tintMode="multiply">
                    <gradient
                        android:angle="90.0"
                        android:centerColor="#00000000"
                        android:endColor="#00000000"
                        android:startColor="#40000000" />
                    <corners android:radius="@*android:dimen/harmful_app_name_padding_top" />
                </shape>
            </item>
            <item
                android:end="12dp"
                android:bottom="6dp"
                android:gravity="end|bottom"
                android:drawable="@drawable/ic_qstile_reflect" />
        </layer-list>
    </item>
</layer-list>
